<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_item_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_view_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_view_item_icon"
            android:layout_toEndOf="@id/image_view_item_icon"
            android:fontFamily="sans-serif-black"
            android:text="Item Title"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_title"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/image_view_item_icon"
            android:text="Item Description" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>